{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFUALT$", ".env"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint":{
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": ["transit", "@ts-configs/vitest-config#build"],
            "outputs": ["coverage/**"]
        },
        "transit": {
            "dependsOn": ["^transit"]
        }
    }
}
